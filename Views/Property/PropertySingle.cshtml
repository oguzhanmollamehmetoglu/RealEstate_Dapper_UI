@{
    ViewData["Title"] = "PropertySingle";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<section class="w3l-about-breadcrumb">
    <div class="breadcrumb-bg breadcrumb-bg-about pt-5">
        <div class="container pt-lg-5 py-3">
        </div>
    </div>
</section>
<section class="w3l-breadcrumb">
    <div class="container">
        <ul class="breadcrumbs-custom-path">
            <li><a href="/Default/Index/">Ana Sayfa</a></li>
            <li class="active"><span class="fa fa-angle-right mx-2" aria-hidden="true"></span> İlanlar</li>
            <li class="active"><span class="fa fa-angle-right mx-2" aria-hidden="true"></span> İlan Detayları</li>
        </ul>
    </div>
</section>
<!--/blog-post-->
<section class="w3l-blog post-content py-5">
    <div class="container py-lg-4 py-md-3 py-2">
        <div class="inner mb-4">
            <ul class="blog-single-author-date align-items-center">
                <li>
                    <div class="listing-category"><span>@ViewBag.Type</span>@* <span>Rent</span> *@</div>
                </li>
                <li><span class="fa fa-clock-o"></span>Yaklaşık @ViewBag.Datediff Ay önce ilana eklendi.</li>
                <li><span class="fa fa-eye"></span> 250 Kişi bu ilanı görüntüledi.</li>
            </ul>
        </div>
        <div class="post-content">
            <h2 class="title-single">@ViewBag.Title1</h2>
        </div>
        <div class="blo-singl mb-4">
            <ul class="blog-single-author-date align-items-center">
                <li>
                    <p>@ViewBag.Address,@ViewBag.District,@ViewBag.City</p>
                </li>
                <li><span class="fa fa-bed"></span> @ViewBag.BedRoomCount Yatak Odası</li>
                <li><span class="fa fa-bath"></span> @ViewBag.BathCount Banyo</li>
                <li><span class="fa fa-share-square-o"></span> @ViewBag.ProductSize metrekare</li>
            </ul>
            <ul class="share-post">
                <a href="#url" class="cost-estate m-o">₺ @ViewBag.Price</a>
            </ul>
        </div>
        <div class="row">
            <div class="col-lg-8 w3l-news">
                <div class="blog-single-post">
                    @await Component.InvokeAsync("_PropertySingleSliderViewComponnentPartial",new{id=ViewBag.i})
                    <div class="single-post-content">
                        <h3 class="post-content-title mb-3">İlan Açıklaması</h3>
                        <p class="mb-4">
                            @ViewBag.Description
                        </p>
                        @* <p class="mb-4">
                            When you decide to put your business online it is a little bet tricky step
                            for novice
                            computer users because they want to keep data safe & secure.
                            This problem developed from companies which did not take security seriously. Lorem ipsum
                            dolor sit amet elit.
                        </p> *@
                        <div class="single-bg-white">
                            <h3 class="post-content-title mb-4">İlan Detayları</h3>
                            <ul class="details-list">
                                <li><strong>İlan id :</strong> @ViewBag.PropertyID </li>
                                <li><strong>Metrekare :</strong> @ViewBag.PropertySize </li>
                                <li><strong>Oda Sayısı :</strong> @ViewBag.RoomCount </li>
                                <li><strong>Yatak Odası :</strong> @ViewBag.BedRoomCount </li>
                                <li><strong>Banyo Sayısı :</strong> @ViewBag.BathCount </li>
                                <li><strong>Dış Malzeme :</strong> Tuğla </li>
                                <li><strong>Yapı Türü :</strong> Beton </li>
                                <li><strong>Garaj Sayısı :</strong> @ViewBag.GarageSize </li>
                                <li><strong>Garages Araba Sayısı :</strong> 15 </li>
                                <li><strong>Fiyat :</strong> @ViewBag.Price ₺ </li>
                                <li><strong>Yapım Yılı :</strong> @ViewBag.BuildYear </li>
                                <li><strong>İlan Tarihi :</strong> @ViewBag.AdvertisementDate.ToString("dd-MMM-yyyy") </li>
                            </ul>
                        </div>
                        @await Component.InvokeAsync("_PropertySinglePropertyAmenityStatusTrueByPropertyIdViewComponnentPartial")
                    </div>
                    <div class="single-bg-white">
                        <h3 class="post-content-title mb-4">Konum</h3>
                        <div class="agent-map">
                            <iframe src="@ViewBag.Location" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                        </div>
                    </div>
                    <div class="single-bg-white mb-0">
                        <h3 class="post-content-title mb-4">Ev Tanıtım Videosu</h3>
                        <div class="post-content">
                            <iframe src="@ViewBag.VideoUrl" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
                        </div>
                    </div>
                </div>
            </div>
            @await Component.InvokeAsync("_PropertySingleAppUserViewComponnentPartial")
        </div>
    </div>
</section>
<!--//blog-posts-->