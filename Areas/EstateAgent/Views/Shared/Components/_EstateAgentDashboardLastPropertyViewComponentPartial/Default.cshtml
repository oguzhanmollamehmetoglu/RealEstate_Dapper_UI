                            <td>@item.City - @item.District</td>
                            <td>@item.CategoryName</td>
                            <td>@item.Price ₺</td>
                            <td><a class="btn btn-sm btn-primary" href="@Url.Action("PropertySingle","Property",new {slug = item.SlugUrl, id = item.PropertyID })">İlanı Gör</a></td>
