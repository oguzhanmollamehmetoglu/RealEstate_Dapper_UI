@model List<ResultToDoListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Yapılıcaklar Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Görev</th>
                                <th scope="col">Görev Tarihi</th>
                                <th scope="col">Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.Description</td>
                                    <td>@item.ToDoListDate.ToString("dd-MMM-yyyy")</td>
                                    <td><a href="/Admin/ToDoList/DeleteToDoList/@item.ToDoListID" class="btn btn-outline-danger">Sil</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Admin/ToDoList/CreateToDoList/" class="btn btn-outline-info">Yeni Görev Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>