@model CreateToDoListDto
@{
    ViewData["Title"] = "CreateToDoList";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Yeni Görev Ekleme Sayfası</h6>
                <form asp-action="CreateToDoList" method="post">
                    <label>Görev</label>
                    <input type="text" asp-for="Description" class="form-control" />
                    <br />
                    <label>Görev Tarihi</label>
                    <input type="date" asp-for="ToDoListDate" class="form-control" />
                    <br />
                    <button class="btn btn-primary">Görev Ekle</button>
                </form>
            </div>
        </div>
    </div>
</div>