@model List<ResultContactDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">İletişim Formu Mesaj Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Adı-Soyadı</th>
                                <th scope="col">E-mail</th>
                                <th scope="col">Tarih</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Durum</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.ContactID</th>
                                    <td>@item.Name</td>
                                    <td>@item.Email</td>
                                    <td>@item.SendDate.ToString("yyyy-MMM-dd")</td>
                                    <td><a href="/Admin/Contact/DeleteContact/@item.ContactID" class="btn btn-outline-danger">Sil</a></td>
                                    @if (item.ContactStatus == true)
                                    {
                                        <td><a href="/Admin/Contact/SendMessageContact/@item.ContactID" class="btn btn-outline-success">Mesajı Oku</a></td>
                                    }
                                    else
                                    {
                                        <td><p>Cevaplandı</p></td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>