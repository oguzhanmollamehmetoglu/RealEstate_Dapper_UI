@model List<ResultSocialMediaDto>

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">İletişim Bilgileri Sosyal Medya Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Name</th>
                                <th scope="col">Icon</th>
                                <th scope="col">Url</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.SocialMediaID</th>
                                    <td>@item.Name</td>
                                    <td>@item.Icon</td>
                                    <td>@item.SocialMediaUrl</td>
                                    <td><a href="/Admin/Contactİnformation/DeleteSocialMedia/@item.SocialMediaID" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Admin/Contactİnformation/UpdateSocialMedia/@item.SocialMediaID" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Admin/Contactİnformation/CreateSocialMedia/" class="btn btn-outline-info">Bilgi Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>