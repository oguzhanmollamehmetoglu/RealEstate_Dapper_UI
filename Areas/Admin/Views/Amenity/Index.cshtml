@model List<ResultAmenityDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">İlan Özellik Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Özellik Başlığı</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.Title</td>
                                    <td><a href="/Admin/Amenity/DeleteAmenity/@item.AmenityID" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Admin/Amenity/UpdateAmenity/@item.AmenityID" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Admin/Amenity/CreateAmenity/" class="btn btn-outline-info">Yeni İlan Özellik Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>