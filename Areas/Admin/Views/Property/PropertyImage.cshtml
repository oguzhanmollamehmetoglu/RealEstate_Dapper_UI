@model List<GetPropertyImageByPropertyIdDto>
@{
    ViewData["Title"] = "PropertyImage";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">İlan Resimleri Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Slayt Resimleri</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.PropertyImageId</th>
                                    <td>@item.ImageUrl</td>
                                    <td><a href="/Admin/Property/DeletePropertyImage/@item.PropertyImageId" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Admin/Property/UpdatePropertyImage/@item.PropertyImageId" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>