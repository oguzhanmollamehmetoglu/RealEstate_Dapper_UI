@model List<ResultAddressDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">İletişim Bilgileri Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Address</th>
                                <th scope="col">Tel1</th>
                                <th scope="col">Tel2</th>
                                <th scope="col">Email</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.AddressID</th>
                                    <td>@item.AddressFull</td>
                                    <td>@item.Phone1</td>
                                    <td>@item.Phone2</td>
                                    <td>@item.Email</td>
                                    <td><a href="/Admin/Contactİnformation/DeleteAddress/@item.AddressID" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Admin/Contactİnformation/UpdateAddress/@item.AddressID" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Admin/Contactİnformation/CreateAddress/" class="btn btn-outline-info">Bilgi Girişi</a>
                </div>
            </div>           
        </div>
    </div>
</div>
@await Component.InvokeAsync("_ContactİnformationSocialMediaListViewComponentPartial")