@model CreateSocialMediaDto
@{
    ViewData["Title"] = "CreateSocialMedia";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Yeni İletişim Bilgileri Sosyal Medya Ekleme Sayfası</h6>
                <form method="post">
                    <label>İsimi</label>
                    <input type="text" asp-for="Name" class="form-control" />
                    <span>Baş harfini küçük yazılıcak şekilde yazınız!!!</span>
                    <br />
                    <label>Icon</label>
                    <input type="text" asp-for="Icon" class="form-control" />
                    <br />
                    <label>Url</label>
                    <input type="text" asp-for="SocialMediaUrl" class="form-control" />
                    <br />
                    <button class="btn btn-primary">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>