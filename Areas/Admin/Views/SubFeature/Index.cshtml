@model List<ResultSubFeatureDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Alt Özellikler Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">İcon</th>
                                <th scope="col">Üst Başlık</th>
                                <th scope="col">Ana Başlık</th>
                                <th scope="col">Açıklama</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.Icon</td>
                                    <td>@item.TopTitle</td>
                                    <td>@item.MainTitle</td>
                                    <td>@item.Description</td>
                                    <td><a href="/Admin/SubFeature/DeleteSubFeature/@item.SubFeatureID" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Admin/SubFeature/UpdateSubFeature/@item.SubFeatureID" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Admin/SubFeature/CreateSubFeature/" class="btn btn-outline-info">Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>