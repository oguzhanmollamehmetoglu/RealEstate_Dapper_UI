@model UpdateSubFeatureDto
@{
    ViewData["Title"] = "UpdateSubFeature";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Alt özellikler güncelleme sayfası</h6>
                <form method="post">
                    <input type="hidden" asp-for="SubFeatureID" />
                    <label>İcon</label>
                    <input type="text" asp-for="Icon" class="form-control" />
                    <br />
                    <label>Üst Başlık</label>
                    <input type="text" asp-for="TopTitle" class="form-control" />
                    <br />
                    <label>Ana Başlık</label>
                    <input type="text" asp-for="MainTitle" class="form-control" />
                    <br />
                    <label>Açıklama</label>
                    <input type="text" asp-for="Description" class="form-control" />
                    <br />
                    <button class="btn btn-primary">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>