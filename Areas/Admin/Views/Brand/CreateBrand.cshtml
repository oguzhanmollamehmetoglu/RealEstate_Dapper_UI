@model CreateBrandDto
@{
    ViewData["Title"] = "CreateBrand";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Yeni referans ekleme sayfası</h6>
                <form method="post">
                    <label>Referans Image Url</label>
                    <input type="text" asp-for="BrandImageUrl" class="form-control" />
                    <br />
                    <label>Referans Link</label>
                    <input type="text" asp-for="BrandImageLink" class="form-control" />
                    <br />
                    <button class="btn btn-primary">Referans Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>