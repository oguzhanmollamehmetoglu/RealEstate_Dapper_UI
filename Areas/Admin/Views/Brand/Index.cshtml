@model List<ResultBrandDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Referans Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Url</th>
                                <th scope="col">Link</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.BrandID</th>
                                    <td>@item.BrandImageUrl</td>
                                    <td>@item.BrandImageLink</td>
                                    <td><a href="/Admin/Brand/DeleteBrand/@item.BrandID" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Admin/Brand/UpdateBrand/@item.BrandID" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Admin/Brand/CreateBrand/" class="btn btn-outline-info">Yeni Referans Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>